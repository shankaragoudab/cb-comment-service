{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "commentTreeId": {
      "type": "string"
    },
    "hierarchyPath": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "commentData": {
      "type": "object",
      "properties": {
        "comment": {
          "type": "string",
          "minLength": 1
        },
        "file": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "commentSource": {
          "type": "object",
          "properties": {
            "userId": {
              "type": "string",
              "minLength": 1
            },
            "userPic": {
              "type": "string",
              "minLength": 1
            },
            "userName": {
              "type": "string"
            },
            "userRole": {
              "type": "string"
            }
          },
          "required": ["userId", "userPic", "userRole"],
          "additionalProperties": false
        },
        "taggedUsers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["comment", "commentSource"],
      "additionalProperties": false
    }
  },
  "required": ["commentTreeId", "commentData"],
  "additionalProperties": false
}